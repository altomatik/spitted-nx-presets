# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build node-standalone`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t node-standalone`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system node-standalone && \
          adduser --system -G node-standalone node-standalone

COPY dist/node-standalone node-standalone
RUN chown -R node-standalone:node-standalone .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix node-standalone --omit=dev -f install

CMD [ "node", "node-standalone" ]
